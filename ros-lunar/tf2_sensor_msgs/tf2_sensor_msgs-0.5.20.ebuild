LICENSE="BSD"

KEYWORDS="~x86 ~amd64 ~arm ~arm64"
IUSE="test"
RDEPEND="
	ros-lunar/python_orocos_kdl
	ros-lunar/rospy
	ros-lunar/sensor_msgs
	ros-lunar/tf2
	ros-lunar/tf2_ros
	test? ( ros-lunar/geometry_msgs )
	test? ( ros-lunar/rostest )
	dev-cpp/eigen
"
DEPEND="${RDEPEND}
	ros-lunar/catkin
	ros-lunar/cmake_modules
"

SLOT="0"
ROS_DISTRO="lunar"
ROS_PREFIX="opt/ros/${ROS_DISTRO}"
